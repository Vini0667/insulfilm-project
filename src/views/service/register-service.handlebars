{{#each errors}}
    <div class="alert alert-danger"> {{ text }} </div>
    {{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/service/register" method="post">
            <h4> Qual o tipo de serviço: </h4>
            <label for="serviceType"> Serviço para carro: </label>
            <input type="radio" name="serviceType" id="serviceType" value="true" required><br>
            <label for="serviceType"> Serviço para blindex: </label>
            <input type="radio" name="serviceType" id="serviceType" value="false" required><br>
            <label class="mt-3" for="price"> Qual foi o valor cobrado: </label>
            <input type="number" class="form-control"  name="price" id="price" placeholder="Digite qual foi o valor cobrado:" required>
            <label class="mt-2" for="spending"> Ouve algum valor gasto a mais? Gasolina por exemplo: </label>
            <input class="form-control" type="number" name="spending" id="spending" placeholder="Digite qual foi os gastos:" required>
            <label class="mt-2" for="serviceDate"> Data do serviço: </label>
            <input class="form-control" type="date" name="serviceDate" id="serviceDate" required>
            <h4 class="mt-3"> Qual foram os materiais usados: </h4>
            <div class="form-control">
                {{#each materials}}
                    <label for="material"> {{ name }} </label>
                    <input value="{{_id}}" type="checkbox" name="material" id="material"><br>
                    {{else}}
                        <div class="alert alert-danger mt-4">
                            Não há materiais cadastrados ainda!... Cadastre os materiais primeiro.
                        </div>
                {{/each}}
            </div>
            {{#if clients}}
                <select name="client" id="client" class="mt-3 form-control">
                    {{#each clients}}
                        <option value="{{_id}}"> {{name}} </option>
                    {{/each}}
                </select>
                {{else}}
                    <div class="alert alert-danger mt-4">
                        Não há materiais cadastrados ainda!... Cadastre os materiais primeiro.
                    </div>
            {{/if}}
            <button type="submit" class="btn btn-primary mt-4"> Enviar </button>
        </form>
    </div>
</div>